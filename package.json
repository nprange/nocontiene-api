{
  "name": "nocontiene-api",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "dev": "npm run services:up && npm run services:wait:database && npm run migrations:up && tsx watch api/server.ts",
    "test": "npm run services:up && concurrently -n node,jest --hide node -k -s command-jest \"tsx watch api/server.ts\" \"jest --runInBand --verbose\"",
    "posttest": "npm run services:stop",
    "test:watch": "jest --watchAll --runInBand --verbose",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "services:wait:database": "tsx infra/scripts/wait-for-postgres.ts",
    "migrations:create": "npx drizzle-kit generate",
    "migrations:up": "npx drizzle-kit migrate",
    "lint:biome:formatter:check": "npx biome format .",
    "lint:biome:linter:check": "npx biome lint .",
    "drizzle-studio": "npx drizzle-kit studio",
    "prepare": "husky",
    "commit": "cz"
  },
  "author": "nprange",
  "license": "MIT",
  "description": "",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@commitlint/cli": "19.7.1",
    "@commitlint/config-conventional": "19.7.1",
    "@types/async-retry": "1.4.9",
    "@types/jest": "29.5.14",
    "@types/node": "22.13.5",
    "@types/pg": "8.11.11",
    "commitizen": "4.3.1",
    "concurrently": "9.1.2",
    "cz-conventional-changelog": "3.3.0",
    "drizzle-kit": "0.30.4",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "ts-jest": "29.2.6",
    "ts-node": "10.9.2",
    "tsx": "4.19.3",
    "typescript": "5.7.3",
    "uuid": "11.1.0"
  },
  "dependencies": {
    "@fastify/cors": "10.1.0",
    "@fastify/swagger": "9.4.2",
    "@fastify/swagger-ui": "5.2.2",
    "async-retry": "1.3.3",
    "dotenv": "16.4.5",
    "dotenv-expand": "11.0.6",
    "drizzle-orm": "0.39.3",
    "fastify": "5.2.1",
    "fastify-type-provider-zod": "4.0.2",
    "pg": "8.13.3",
    "zod": "3.24.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
